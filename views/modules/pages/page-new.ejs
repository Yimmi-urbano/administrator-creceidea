<div class="row">
    <div class="mb-3 col-md-9 col-12">
        <div class="card mb-4">
            <div class="card-header py-3 bg-transparent border-bottom-0">
                <h6 class="card-title mb-0"><strong>Crear página</strong></h6>

            </div>
            <div class="card-body card-main-one">
                <div>
                    <div class="row">
                        <div class="mb-3 col-md-12 col-12">
                            <label class="col-form-label">Titulo de página</label>
                            <fieldset class="form-icon-group left-icon position-relative">
                                <input type="text" class="form-control" id="title-page">
                            </fieldset>
                        </div>

                    </div>
                </div>

            </div>

        </div>

        <div class="card">
            <div class="card-body card-main-one">
                <div id="editorjs"></div>
            </div>
        </div>

    </div>

    <div class="mb-3 col-md-3 col-12">
        <div class="card mb-4">
            <div class="card-body card-main-one">

                <div class="card-action">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="onoff">
                    </div>
                </div>

                <div class="mb-3 col-md-12 col-12">
                    <label class="col-form-label">Meta Description</label>
                    <fieldset class="form-icon-group left-icon position-relative">
                        <input type="text" class="form-control" id="meta-description">
                        <div class="form-icon position-absolute">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-person" viewBox="0 0 16 16">
                                <path
                                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg>
                        </div>
                    </fieldset>
                </div>

                <div class="mb-3 col-md-12 col-12">
                    <label class="col-form-label">Meta Keywords</label>
                    <fieldset class="form-icon-group left-icon position-relative">
                        <input type="text" class="form-control" id="meta-keywords">
                        <div class="form-icon position-absolute">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-person" viewBox="0 0 16 16">
                                <path
                                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            </svg>
                        </div>
                    </fieldset>


                </div>

            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body card-main-one"> 
                <input type="file" id="filepond" name="image">
                <input type="hidden" id="image_url" name="image_url">
            </div>
        </div>

    </div>
    <div class="col-12">
        <button class="btn btn-primary" id="save-button">Guardar</button>
        <button class="btn btn-outline-secondary">Cancelar</button>
    </div>
</div>

<input type="file" id="imageInput" class="hidden d-none">

